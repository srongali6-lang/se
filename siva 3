import matplotlib.pyplot as plt
def quadratic(day,a,b,c):
    return a*day*day+b*day+c
def main():
    a,b,c=1,-3,2
    days=int(input("Enter the number of days"))
    listOfDays=list(range(1,days+1))
    temp=[quadratic(i,a,b,c) for i in listOfDays]
    plt.plot(listOfDays,temp,label=f"temperature ={a}x^2+{b}x+{c}")
    plt.xlabel("No-of-days")
    plt.ylabel("Temperature in celcius")
    plt.title("Weather modelling")
    plt.legend()
    plt.show()
main()


